<?xml version="1.0" encoding="utf-8" ?>
<Frame xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
       x:Class="PolyhydraGames.Core.Maui.Controls.Checkbox" Margin="1" BackgroundColor="WhiteSmoke">

    <StackLayout Margin="0,0" Orientation="Horizontal" >
        <CheckBox  VerticalOptions="Center" x:Name="checkbox"  />
        <Label TextColor="Gray"  HorizontalOptions="StartAndExpand" FontAttributes="Italic"   VerticalOptions="Start" x:Name="title"  />
    </StackLayout>
</Frame>